# Suma los digitos de un numero entero 1971 = 18

import os
os.system('cls')

def sumadigitos(n):
    suma=0
    while n!=0:
        dig = n % 10
        suma = suma + dig
        n = n // 10
        return suma

año = int(input("Dame tu año de nacimiento y te dire tu numero de la suerte: "))
res = sumadigitos(año)
print(f"La suma de los dígitos de {año} es {res}")