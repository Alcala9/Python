# Regresa la etacion del a単o con l単etra dando un rango del 1 al 4

import os
os.system('cls')

def estacion(n):
    est = ""

    if n==1:
        est='Primavera'
    elif n==2:
        est='Verano'
    elif n==3:
        est='Oto#o'
    elif n==4:
        est='Invierno'
    else:
        est=''
    return est

n = int(input('Dame la estacion del a単o (1-4) ? '))
print(f'La estacion del a単o es {estacion(n)}')